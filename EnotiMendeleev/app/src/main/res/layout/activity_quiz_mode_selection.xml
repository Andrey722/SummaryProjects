<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuizModeSelectionActivity">

    <TextView
            android:text="Викторина"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_QMode1" android:background="#0000" android:textSize="60sp" android:textColor="#0f0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="184dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:shadowColor="#f000" android:shadowRadius="15" android:textStyle="bold"/>
    <TextView
            android:text="Исключить лишнее"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_QMode2" android:background="#0000" android:textSize="60sp" android:textColor="#0f0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/T_QMode1" android:shadowRadius="15" android:shadowColor="#f000"
            android:textStyle="bold"/>
    <TextView
            android:text="Порядок"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_QMode3" android:background="#0000" android:textSize="60sp" android:textColor="#0f0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/T_QMode2"
            app:layout_constraintEnd_toEndOf="parent"
            android:shadowColor="#f000" android:shadowRadius="15" android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>