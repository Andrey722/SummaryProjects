<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogoActivity">

    <TextView
            android:text="Enoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_Name"
            android:background="#0000"
            android:textColor="#0f0"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="@+id/guideline12"
            app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:id="@+id/Logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#0000"
            app:srcCompat="@drawable/enotioriginal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintBottom_toTopOf="@+id/guideline12"
    />
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline12" app:layout_constraintGuide_percent="0.75"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13" app:layout_constraintGuide_percent="0.2"/>
</android.support.constraint.ConstraintLayout>