<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QMode2Activity">

    <TextView
            android:text="Найди лишнее"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_Task2"
            android:background="#0000"
            android:textColor="#0f0"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
            android:layout_width="360dp"
            android:layout_height="546dp"
            android:background="#0000" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/T_Task2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ScrollArea">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:background="#0000" android:id="@+id/ScrollLinear"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>