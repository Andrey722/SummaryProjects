<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartActivity">
    <ImageButton
            android:id="@+id/enotiBut"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/enoti"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline6"/>
    <TextView
            android:text="EnotiMendeleev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_Title" android:textSize="40sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="73dp" android:layout_marginRight="73dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="sans-serif" android:background="#0000"
            android:textAllCaps="false" android:textColor="#ffff"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"/>
    <TextView
            android:text="Играть"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_PlayBut" android:textSize="72sp"
            android:fontFamily="sans-serif" app:layout_constraintStart_toStartOf="@+id/guideline7"
            android:background="#0000" android:textStyle="bold"
            android:textColor="#0f0" app:layout_constraintHorizontal_bias="0.504" android:shadowColor="#f000"
            android:shadowDx="0" android:shadowDy="0" android:shadowRadius="15"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="@+id/guideline10" app:layout_constraintBottom_toTopOf="@+id/guideline11"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline6"
            app:layout_constraintGuide_percent="0.9001368"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline7"
            app:layout_constraintGuide_percent="0.18"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline8"
            app:layout_constraintGuide_percent="0.82"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline9"
            app:layout_constraintGuide_percent="0.2"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline10" app:layout_constraintGuide_percent="0.55"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline11" app:layout_constraintGuide_percent="0.75"/>
</android.support.constraint.ConstraintLayout>