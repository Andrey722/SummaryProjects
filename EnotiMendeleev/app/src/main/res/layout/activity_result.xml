<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="Поздравеляем!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_Congrats"
            android:background="#0000"
            android:textAppearance="@style/TextAppearance.AppCompat" app:fontFamily="sans-serif"
            android:textSize="36sp" android:textColor="#0f0" android:shadowRadius="10" android:shadowColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/T_CongratsText" app:layout_constraintVertical_bias="0.0"
    />
    <TextView
            android:text="Вы полностью прошли\nэтот режим!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/T_CongratsText"
            android:background="#0000"
            android:textAppearance="@style/TextAppearance.AppCompat" app:fontFamily="sans-serif"
            android:textSize="24sp" android:textColor="#0f0" android:shadowRadius="10" android:shadowColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/T_ModeUnlocked" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="42dp" app:layout_constraintTop_toBottomOf="@+id/T_Congrats"/>
    <TextView
            android:text="Открыт новый режим:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/T_ModeUnlocked"
            android:background="#0000"
            android:textAppearance="@style/TextAppearance.AppCompat" app:fontFamily="sans-serif"
            android:textSize="24sp" android:textColor="#0f0" android:shadowRadius="10" android:shadowColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/T_UnlockedMode" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/T_CongratsText"/>
    <TextView
            android:text="Сложный"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/T_UnlockedMode"
            android:background="#0000"
            android:textAppearance="@style/TextAppearance.AppCompat" app:fontFamily="sans-serif"
            android:textSize="36sp" android:textColor="#0f0" android:shadowRadius="10" android:shadowColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/T_ModeUnlocked" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/ModesBut"/>
    <Button
            android:text="Режимы"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ModesBut" android:background="@drawable/buts"
            android:padding="10dp"
            android:layout_marginBottom="140dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/T_UnlockedMode"/>
</android.support.constraint.ConstraintLayout>