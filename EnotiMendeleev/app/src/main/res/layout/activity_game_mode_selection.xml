<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameModeSelectionActivity">

    <TextView
            android:text="Слово из элементов"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_Mode1" android:background="#0000" android:textSize="60sp" android:textColor="#0f0"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="184dp"
            app:layout_constraintHorizontal_bias="0.0" android:shadowColor="#f000" android:shadowRadius="15"
            android:textStyle="bold"/>
    <TextView
            android:text="Викторина"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_QuizMode" android:background="#0000" android:textSize="60sp" android:textColor="#0f0"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/T_Mode1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:shadowRadius="15" android:shadowColor="#f000" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>