            android:text="Выбор режима"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/t_Title" android:textSize="40sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="73dp" android:layout_marginRight="73dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="73dp"
            android:layout_marginStart="73dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="sans-serif" android:background="#0000"
            android:textAllCaps="false" android:textColor="#ffff"/>
</android.support.constraint.ConstraintLayout>